    <script>
        async function fetchTeamMood() {
            try {
                const response = await fetch('/api/team-mood');
                const data = await response.json();
                document.getElementById('mood-result').innerHTML = `
                    <h6>Current Team Vibe:</h6>
                    <div class="fs-1 mb-2">${data.current_mood}</div>
                    <p><strong>Energy Level:</strong> ${data.team_energy}%</p>
                    <p><strong>Productivity:</strong> ${data.productivity_score}/10</p>
                    <small class="text-muted">${new Date(data.timestamp).toLocaleString()}</small>
                `;
            } catch (error) {
                document.getElementById('mood-result').innerHTML = '<p class="text-danger">Error loading data</p>';
            }
        }

        async function fetchDeploymentInfo() {
            try {
                const response = await fetch('/api/deployment-info');
                const data = await response.json();
                document.getElementById('deployment-result').innerHTML = `
                    <h6>Deployment Details:</h6>
                    <p><strong>App:</strong> ${data.app_name}</p>
                    <p><strong>Build:</strong> #${data.build_number}</p>
                    <p><strong>Region:</strong> ${data.azure_region}</p>
                    <p><strong>Status:</strong> ${data.status}</p>
                    <small class="text-muted">By ${data.deployed_by}</small>
                `;
            } catch (error) {
                document.getElementById('deployment-result').innerHTML = '<p class="text-danger">Error loading data</p>';
            }
        }

        // Generate Report Function
        async function generateReport() {
            const reportType = prompt('Select report type: team, project, or wellness', 'team');
            if (reportType && ['team', 'project', 'wellness'].includes(reportType)) {
                try {
                    const response = await fetch(`/api/export/pdf-report/${reportType}`);
                    const data = await response.json();
                    
                    // Show success message
                    alert(`‚úÖ ${data.message}\nüìÑ Pages: ${data.pages}\nüíæ Size: ${data.report_size}\nüîó Download: ${data.download_url}`);
                } catch (error) {
                    alert('‚ùå Error generating report. Please try again.');
                }
            }
        }

        // Live stats updates
        function updateLiveStats() {
            // Simulate real-time data updates
            const elements = [
                { id: 'live-users', values: [18, 19, 17, 20, 16] },
                { id: 'active-tasks', values: [24, 23, 25, 22, 26] },
                { id: 'completion-rate', values: [87, 89, 85, 91, 88] }
            ];
            
            elements.forEach(element => {
                const el = document.getElementById(element.id);
                if (el) {
                    const randomValue = element.values[Math.floor(Math.random() * element.values.length)];
                    el.textContent = randomValue + (element.id === 'completion-rate' ? '%' : '');
                }
            });
        }

        // Update live stats every 5 seconds
        setInterval(updateLiveStats, 5000);

        // Auto-refresh demo
        setTimeout(() => {
            fetchTeamMood();
            fetchDeploymentInfo();
        }, 1000);
    </script>
