    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function fetchTeamMood() {
            try {
                const response = await fetch('/api/team-mood');
                const data = await response.json();
                document.getElementById('mood-result').innerHTML = `
                    <h6>Current Team Vibe:</h6>
                    <div class="fs-1 mb-2">${data.current_mood}</div>
                    <p><strong>Energy Level:</strong> ${data.team_energy}%</p>
                    <p><strong>Productivity:</strong> ${data.productivity_score}/10</p>
                    <small class="text-muted">${new Date(data.timestamp).toLocaleString()}</small>
                `;
            } catch (error) {
                document.getElementById('mood-result').innerHTML = '<p class="text-danger">Error loading data</p>';
            }
        }

        async function fetchDeploymentInfo() {
            try {
                const response = await fetch('/api/deployment-info');
                const data = await response.json();
                document.getElementById('deployment-result').innerHTML = `
                    <h6>Deployment Details:</h6>
                    <p><strong>App:</strong> ${data.app_name}</p>
                    <p><strong>Build:</strong> #${data.build_number}</p>
                    <p><strong>Region:</strong> ${data.azure_region}</p>
                    <p><strong>Status:</strong> ${data.status}</p>
                    <small class="text-muted">By ${data.deployed_by}</small>
                `;
            } catch (error) {
                document.getElementById('deployment-result').innerHTML = '<p class="text-danger">Error loading data</p>';
            }
        }

        // Auto-refresh demo
        setTimeout(() => {
            fetchTeamMood();
            fetchDeploymentInfo();
        }, 1000);
    </script>
