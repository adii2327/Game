<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="fas fa-rocket me-2"></i>CTS VibeApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/projects">Projects</a></li>
                    <li class="nav-item"><a class="nav-link" href="/wellness">Wellness</a></li>
                    <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-4">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-6 fw-bold text-primary">
                    <i class="fas fa-project-diagram me-3"></i>Project Management
                </h1>
                <p class="lead text-muted">Track and manage all CTS team projects in real-time</p>
            </div>
        </div>

        <!-- Project Summary Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <div class="text-primary mb-3">
                            <i class="fas fa-tasks fa-3x"></i>
                        </div>
                        <h4 id="totalProjects">12</h4>
                        <p class="text-muted mb-0">Total Projects</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <div class="text-success mb-3">
                            <i class="fas fa-check-circle fa-3x"></i>
                        </div>
                        <h4 id="completedProjects">8</h4>
                        <p class="text-muted mb-0">Completed</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <div class="text-warning mb-3">
                            <i class="fas fa-clock fa-3x"></i>
                        </div>
                        <h4 id="inProgressProjects">4</h4>
                        <p class="text-muted mb-0">In Progress</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <div class="text-info mb-3">
                            <i class="fas fa-percentage fa-3x"></i>
                        </div>
                        <h4 id="overallProgress">78%</h4>
                        <p class="text-muted mb-0">Overall Progress</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Projects -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Active Projects</h5>
                        <button class="btn btn-primary btn-sm" onclick="refreshProjects()">
                            <i class="fas fa-sync-alt me-2"></i>Refresh
                        </button>
                    </div>
                    <div class="card-body">
                        <div id="projectsContainer">
                            <!-- Projects will be loaded here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Project Timeline -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0"><i class="fas fa-timeline me-2"></i>Project Timeline</h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            <div class="timeline-item">
                                <div class="timeline-marker bg-primary"></div>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">Azure Migration Project</h6>
                                    <p class="timeline-description">Successfully migrated 15 applications to Azure cloud infrastructure</p>
                                    <small class="text-muted">Completed: July 15, 2025</small>
                                </div>
                            </div>
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">API Modernization</h6>
                                    <p class="timeline-description">Refactoring legacy APIs to RESTful architecture with improved performance</p>
                                    <small class="text-muted">In Progress: 67% Complete</small>
                                </div>
                            </div>
                            <div class="timeline-item">
                                <div class="timeline-marker bg-info"></div>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">Security Enhancement</h6>
                                    <p class="timeline-description">Implementing advanced security measures and compliance standards</p>
                                    <small class="text-muted">In Progress: 92% Complete</small>
                                </div>
                            </div>
                            <div class="timeline-item">
                                <div class="timeline-marker bg-warning"></div>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">Mobile App Update</h6>
                                    <p class="timeline-description">Developing new features and improving user experience</p>
                                    <small class="text-muted">Started: July 1, 2025</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function loadProjects() {
            try {
                const response = await fetch('/api/project-status');
                const projects = await response.json();
                
                const container = document.getElementById('projectsContainer');
                container.innerHTML = '';
                
                projects.forEach((project, index) => {
                    const projectCard = `
                        <div class="row mb-4 project-item">
                            <div class="col-12">
                                <div class="card border-start border-${getProjectColor(project.priority)} border-4">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-6">
                                                <h5 class="card-title mb-1">
                                                    <i class="fas fa-folder-open text-primary me-2"></i>
                                                    ${project.name}
                                                </h5>
                                                <div class="d-flex gap-2 mb-2">
                                                    <span class="badge bg-${getStatusColor(project.status)}">${project.status}</span>
                                                    <span class="badge bg-${getPriorityColor(project.priority)}">${project.priority} Priority</span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="progress mb-2" style="height: 20px;">
                                                    <div class="progress-bar bg-gradient progress-bar-striped progress-bar-animated" 
                                                         style="width: ${project.progress}%" 
                                                         role="progressbar">
                                                        ${project.progress}%
                                                    </div>
                                                </div>
                                                <small class="text-muted">Progress: ${project.progress}% Complete</small>
                                            </div>
                                            <div class="col-md-2 text-end">
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-secondary btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Project Details -->
                                        <div class="row mt-3">
                                            <div class="col-md-8">
                                                <p class="text-muted small mb-2">
                                                    ${getProjectDescription(project.name)}
                                                </p>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="d-flex justify-content-between small text-muted">
                                                    <span>Team: ${getRandomTeamSize()} members</span>
                                                    <span>Due: ${getRandomDueDate()}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    container.innerHTML += projectCard;
                });
            } catch (error) {
                console.error('Error loading projects:', error);
                document.getElementById('projectsContainer').innerHTML = 
                    '<div class="alert alert-danger">Error loading projects. Please try again.</div>';
            }
        }

        function getProjectColor(priority) {
            switch (priority) {
                case 'High': return 'danger';
                case 'Medium': return 'warning';
                case 'Low': return 'info';
                default: return 'secondary';
            }
        }

        function getStatusColor(status) {
            switch (status) {
                case 'On Track': return 'success';
                case 'In Progress': return 'primary';
                case 'Almost Done': return 'info';
                default: return 'secondary';
            }
        }

        function getPriorityColor(priority) {
            switch (priority) {
                case 'High': return 'danger';
                case 'Medium': return 'warning';
                case 'Low': return 'secondary';
                default: return 'secondary';
            }
        }

        function getProjectDescription(name) {
            const descriptions = {
                'Azure Migration': 'Migrating legacy applications and databases to Azure cloud platform with zero downtime strategy.',
                'API Modernization': 'Refactoring and modernizing legacy APIs to improve performance, security, and maintainability.',
                'Security Enhancement': 'Implementing comprehensive security measures including authentication, authorization, and data encryption.',
                'Mobile App Update': 'Developing new mobile application features with improved UX/UI and performance optimizations.'
            };
            return descriptions[name] || 'Strategic project initiative to enhance business capabilities and technical infrastructure.';
        }

        function getRandomTeamSize() {
            return Math.floor(Math.random() * 8) + 3; // 3-10 team members
        }

        function getRandomDueDate() {
            const dates = ['Aug 15', 'Sep 30', 'Oct 12', 'Nov 5', 'Dec 1'];
            return dates[Math.floor(Math.random() * dates.length)];
        }

        function refreshProjects() {
            loadProjects();
            // Add visual feedback
            const btn = event.target.closest('button');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Loading...';
            btn.disabled = true;
            
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.disabled = false;
            }, 1500);
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            loadProjects();
        });
    </script>

    <style>
        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 15px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #e9ecef;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 30px;
        }

        .timeline-marker {
            position: absolute;
            left: -22px;
            top: 5px;
            width: 15px;
            height: 15px;
            border-radius: 50%;
            border: 3px solid #fff;
            box-shadow: 0 0 0 3px #e9ecef;
        }

        .timeline-content {
            padding-left: 20px;
        }

        .project-item {
            transition: transform 0.2s ease;
        }

        .project-item:hover {
            transform: translateX(5px);
        }
    </style>
</body>
</html>
