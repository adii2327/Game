    <script>
        // Tab functionality
        function showTab(tabName) {
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(tabName + '-tab').classList.add('active');
        }

        // Category selection
        function selectCategory(category) {
            document.querySelectorAll('.category-item').forEach(item => item.classList.remove('active'));
            event.target.classList.add('active');
            
            console.log('Loading articles for category:', category);
            loadArticlesByCategory(category);
        }

        // Search functionality
        document.getElementById('searchBox').addEventListener('input', function(e) {
            const searchTerm = e.target.value;
            console.log('Searching for:', searchTerm);
            searchArticles(searchTerm);
        });

        // Load trending searches
        async function loadTrendingSearches() {
            try {
                const response = await fetch('/api/knowledge-base');
                const data = await response.json();
                
                const container = document.getElementById('trendingSearches');
                container.innerHTML = data.trending_searches.map(search => 
                    `<a href="#" class="quick-link" onclick="searchArticles('${search}')">${search}</a>`
                ).join('');
            } catch (error) {
                console.error('Error loading trending searches:', error);
            }
        }

        function loadArticlesByCategory(category) {
            // API call to load articles by category
            console.log(`Loading articles for category: ${category}`);
        }

        function searchArticles(term) {
            console.log(`Searching articles for: ${term}`);
            document.getElementById('searchBox').value = term;
            // API call to search articles
        }

        function createNewArticle() {
            alert('Opening article creation form...');
            // Open modal or navigate to article creation page
        }

        function startContribution() {
            alert('Thank you for your interest in contributing!');
            // Open contribution guidelines or form
        }

        // Load initial data
        loadTrendingSearches();

        // Auto-refresh trending searches every 30 minutes
