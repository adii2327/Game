        <!-- Unique Features -->
        <div class="row mb-5">
            <div class="col-12">
                <h2 class="text-center text-primary mb-5">üåü What Makes CTS VibeApp Unique</h2>
                <div class="row g-4">
                    <% deploymentInfo.features.forEach((feature, index) => { %>
                    <div class="col-lg-4 col-md-6">
                        <div class="feature-showcase h-100">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center p-4">
                                    <div class="feature-icon mb-3">
                                        <% if (index === 0) { %>
                                            <i class="fas fa-chart-line text-primary fa-3x"></i>
                                        <% } else if (index === 1) { %>
                                            <i class="fas fa-tasks text-success fa-3x"></i>
                                        <% } else if (index === 2) { %>
                                            <i class="fas fa-heart text-danger fa-3x"></i>
                                        <% } else if (index === 3) { %>
                                            <i class="fas fa-cloud text-info fa-3x"></i>
                                        <% } else if (index === 4) { %>
                                            <i class="fas fa-mobile-alt text-warning fa-3x"></i>
                                        <% } else { %>
                                            <i class="fas fa-cog text-secondary fa-3x"></i>
                                        <% } %>
                                    </div>
                                    <h5 class="card-title"><%= feature %></h5>
                                    <p class="card-text text-muted">
                                        <% if (feature.includes('Dashboard')) { %>
                                            Live metrics, team analytics, and interactive charts powered by Chart.js
                                        <% } else if (feature.includes('Project')) { %>
                                            Real-time project tracking with progress bars and timeline visualization
                                        <% } else if (feature.includes('Wellness')) { %>
                                            Team mood tracking, wellness tips, and mental health resources
                                        <% } else if (feature.includes('Azure')) { %>
                                            Scalable cloud infrastructure with automatic CI/CD deployments
                                        <% } else if (feature.includes('Responsive')) { %>
                                            Mobile-first design with Bootstrap 5 and modern UI components
                                        <% } else { %>
                                            RESTful APIs for team mood, project status, and deployment info
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>

        <!-- Technical Architecture -->
        <div class="row mb-5">
            <div class="col-lg-6">
