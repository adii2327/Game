<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .calendar-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 25px;
            margin-bottom: 20px;
        }
        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .month-nav {
            display: flex;
            gap: 10px;
            align-items: center;
        }
        .nav-btn {
            background: #007acc;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 6px;
            cursor: pointer;
        }
        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 1px;
            background: #ddd;
            border-radius: 8px;
            overflow: hidden;
        }
        .calendar-day {
            background: white;
            padding: 12px;
            min-height: 80px;
            position: relative;
        }
        .day-number {
            font-weight: bold;
            margin-bottom: 5px;
        }
        .event-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            margin: 2px;
            display: inline-block;
        }
        .event-meeting { background: #007acc; }
        .event-training { background: #ffa502; }
        .event-social { background: #26de81; }
        .event-review { background: #ff4757; }
        .events-list {
            margin-top: 20px;
        }
        .event-card {
            background: #f8f9fa;
            border-left: 4px solid #007acc;
            padding: 15px;
            margin: 10px 0;
            border-radius: 8px;
        }
        .event-card.training { border-left-color: #ffa502; }
        .event-card.social { border-left-color: #26de81; }
        .event-card.review { border-left-color: #ff4757; }
        .event-details {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .event-time {
            color: #666;
            font-weight: bold;
        }
        .attendees {
            background: #007acc;
            color: white;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.8em;
        }
    </style>
</head>
<body>
    <div class="container">
        <nav class="navbar">
            <h1>üìÖ Team Calendar</h1>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="/dashboard">Dashboard</a>
                <a href="/tasks">Tasks</a>
                <a href="/chat">Chat</a>
                <a href="/calendar" class="active">Calendar</a>
                <a href="/analytics">Analytics</a>
            </div>
        </nav>

        <div class="content">
            <div class="calendar-container">
                <div class="calendar-header">
                    <h2 id="currentMonth">July 2025</h2>
                    <div class="month-nav">
                        <button class="nav-btn" onclick="previousMonth()">‚Üê Prev</button>
                        <button class="nav-btn" onclick="nextMonth()">Next ‚Üí</button>
                    </div>
                </div>
                
                <div class="calendar-grid" id="calendarGrid">
                    <!-- Calendar will be generated here -->
                </div>
            </div>

            <div class="events-list">
                <h2>üóìÔ∏è Upcoming Events</h2>
                <div id="eventsList">
                    <div class="loading">Loading events...</div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentDate = new Date();
        let events = [];

        async function loadEvents() {
            try {
                const response = await fetch('/api/events');
                events = await response.json();
                displayEvents();
                generateCalendar();
            } catch (error) {
                console.error('Error loading events:', error);
            }
        }

        function displayEvents() {
            const container = document.getElementById('eventsList');
            container.innerHTML = events.map(event => `
                <div class="event-card ${event.type}">
                    <div class="event-details">
                        <div>
                            <h3>${event.title}</h3>
                            <p>üìÖ ${event.date} at ${event.time}</p>
                        </div>
                        <div class="attendees">${event.attendees} attendees</div>
                    </div>
                </div>
            `).join('');
        }

        function generateCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            
            // Update month display
            const monthNames = [
                'January', 'February', 'March', 'April', 'May', 'June',
                'July', 'August', 'September', 'October', 'November', 'December'
            ];
            document.getElementById('currentMonth').textContent = `${monthNames[month]} ${year}`;
            
            // Get first day of month and number of days
            const firstDay = new Date(year, month, 1).getDay();
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            
            const grid = document.getElementById('calendarGrid');
            
            // Day headers
            const dayHeaders = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
            let calendarHTML = dayHeaders.map(day => 
                `<div class="calendar-day" style="background: #f1f3f4; font-weight: bold; text-align: center;">${day}</div>`
            ).join('');
            
            // Empty cells for days before month starts
            for (let i = 0; i < firstDay; i++) {
                calendarHTML += '<div class="calendar-day" style="background: #f9f9f9;"></div>';
            }
            
            // Days of the month
            for (let day = 1; day <= daysInMonth; day++) {
                const dateStr = `${year}-${String(month + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
                const dayEvents = events.filter(event => event.date === dateStr);
                
                let eventsHTML = '';
                dayEvents.forEach(event => {
                    eventsHTML += `<span class="event-dot event-${event.type}" title="${event.title}"></span>`;
                });
                
                const isToday = new Date().toDateString() === new Date(year, month, day).toDateString();
                const todayClass = isToday ? 'style="background: #e3f2fd;"' : '';
                
                calendarHTML += `
                    <div class="calendar-day" ${todayClass}>
                        <div class="day-number">${day}</div>
                        <div>${eventsHTML}</div>
                    </div>
                `;
            }
            
            grid.innerHTML = calendarHTML;
        }

        function previousMonth() {
            currentDate.setMonth(currentDate.getMonth() - 1);
            generateCalendar();
        }

        function nextMonth() {
            currentDate.setMonth(currentDate.getMonth() + 1);
            generateCalendar();
        }

        // Load events and generate calendar on page load
        loadEvents();
    </script>
</body>
</html>
