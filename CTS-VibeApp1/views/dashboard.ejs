<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="fas fa-rocket me-2"></i>CTS VibeApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/projects">Projects</a></li>
                    <li class="nav-item"><a class="nav-link" href="/wellness">Wellness</a></li>
                    <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-6 fw-bold text-primary">
                    <i class="fas fa-chart-line me-3"></i>Team Dashboard
                </h1>
                <p class="lead text-muted">Real-time insights into team performance and project status</p>
            </div>
        </div>

        <!-- Key Metrics -->
        <div class="row g-4 mb-5">
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-primary bg-gradient rounded-circle p-3">
                                    <i class="fas fa-users text-white fa-lg"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h4 class="mb-1" id="activeUsers">247</h4>
                                <p class="text-muted mb-0">Active Team Members</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-gradient rounded-circle p-3">
                                    <i class="fas fa-tasks text-white fa-lg"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h4 class="mb-1" id="projectCount">12</h4>
                                <p class="text-muted mb-0">Active Projects</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-info bg-gradient rounded-circle p-3">
                                    <i class="fas fa-chart-bar text-white fa-lg"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h4 class="mb-1" id="productivity">87%</h4>
                                <p class="text-muted mb-0">Team Productivity</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-warning bg-gradient rounded-circle p-3">
                                    <i class="fas fa-heart text-white fa-lg"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h4 class="mb-1" id="wellnessScore">8.7</h4>
                                <p class="text-muted mb-0">Wellness Score</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts and Data -->
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Project Progress Over Time</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="progressChart" height="300"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0"><i class="fas fa-smile me-2"></i>Team Mood Today</h5>
                    </div>
                    <div class="card-body text-center">
                        <div id="currentMood" class="display-1 mb-3">😊</div>
                        <h4 id="moodDescription">Positive Vibes</h4>
                        <p class="text-muted">Team energy level: <span id="energyLevel">92%</span></p>
                        <button onclick="refreshMood()" class="btn btn-primary">
                            <i class="fas fa-sync-alt me-2"></i>Refresh
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Project Status Table -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Current Projects Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover" id="projectsTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>Project Name</th>
                                        <th>Progress</th>
                                        <th>Status</th>
                                        <th>Priority</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Dynamic content loaded here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize Chart
        const ctx = document.getElementById('progressChart').getContext('2d');
        const progressChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
                datasets: [{
                    label: 'Completed Tasks',
                    data: [65, 78, 85, 92, 88, 95, 102],
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.1)',
                    tension: 0.4
                }, {
                    label: 'Team Productivity',
                    data: [70, 75, 82, 89, 85, 91, 94],
                    borderColor: 'rgb(255, 99, 132)',
                    backgroundColor: 'rgba(255, 99, 132, 0.1)',
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: {
                        display: true,
                        text: 'Monthly Team Performance'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Load projects data
        async function loadProjects() {
            try {
                const response = await fetch('/api/project-status');
                const projects = await response.json();
                
                const tbody = document.querySelector('#projectsTable tbody');
                tbody.innerHTML = '';
                
                projects.forEach(project => {
                    const row = `
                        <tr>
                            <td><strong>${project.name}</strong></td>
                            <td>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar bg-primary" style="width: ${project.progress}%">
                                        ${project.progress}%
                                    </div>
                                </div>
                            </td>
                            <td><span class="badge bg-${getStatusColor(project.status)}">${project.status}</span></td>
                            <td><span class="badge bg-${getPriorityColor(project.priority)}">${project.priority}</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> View
                                </button>
                            </td>
                        </tr>
                    `;
                    tbody.innerHTML += row;
                });
            } catch (error) {
                console.error('Error loading projects:', error);
            }
        }

        function getStatusColor(status) {
            switch (status) {
                case 'On Track': return 'success';
                case 'In Progress': return 'primary';
                case 'Almost Done': return 'info';
                default: return 'secondary';
            }
        }

        function getPriorityColor(priority) {
            switch (priority) {
                case 'High': return 'danger';
                case 'Medium': return 'warning';
                case 'Low': return 'secondary';
                default: return 'secondary';
            }
        }

        async function refreshMood() {
            try {
                const response = await fetch('/api/team-mood');
                const data = await response.json();
                
                document.getElementById('currentMood').textContent = data.current_mood;
                document.getElementById('energyLevel').textContent = data.team_energy + '%';
                
                const moodDescriptions = {
                    '😊': 'Positive Vibes',
                    '😐': 'Neutral Energy',
                    '😔': 'Need Support',
                    '🚀': 'High Energy',
                    '💪': 'Motivated Team',
                    '🎯': 'Focused Mode',
                    '☕': 'Coffee Break',
                    '🔥': 'On Fire!'
                };
                
                document.getElementById('moodDescription').textContent = 
                    moodDescriptions[data.current_mood] || 'Great Team Spirit';
            } catch (error) {
                console.error('Error refreshing mood:', error);
            }
        }

        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', function() {
            loadProjects();
            refreshMood();
            
            // Auto-refresh every 30 seconds
            setInterval(() => {
                loadProjects();
                refreshMood();
            }, 30000);
        });
    </script>
</body>
</html>
