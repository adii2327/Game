<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="fas fa-rocket me-2"></i>CTS VibeApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/projects">Projects</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/wellness">Wellness</a></li>
                    <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-4">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-6 fw-bold text-primary">
                    <i class="fas fa-heart me-3"></i>Team Wellness Hub
                </h1>
                <p class="lead text-muted">Promoting mental health, work-life balance, and team happiness</p>
            </div>
        </div>

        <!-- Wellness Overview -->
        <div class="row g-4 mb-5">
            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <div class="text-success mb-3">
                            <i class="fas fa-smile fa-3x"></i>
                        </div>
                        <h4 id="happinessScore">8.7/10</h4>
                        <p class="text-muted mb-0">Happiness Score</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <div class="text-info mb-3">
                            <i class="fas fa-battery-three-quarters fa-3x"></i>
                        </div>
                        <h4 id="energyLevel">87%</h4>
                        <p class="text-muted mb-0">Energy Level</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <div class="text-warning mb-3">
                            <i class="fas fa-balance-scale fa-3x"></i>
                        </div>
                        <h4 id="workLifeBalance">Good</h4>
                        <p class="text-muted mb-0">Work-Life Balance</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm text-center h-100">
                    <div class="card-body">
                        <div class="text-danger mb-3">
                            <i class="fas fa-thermometer-half fa-3x"></i>
                        </div>
                        <h4 id="stressLevel">Low</h4>
                        <p class="text-muted mb-0">Stress Level</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Current Team Mood -->
        <div class="row g-4 mb-5">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Today's Team Vibe</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3 mb-3">
                                <div class="mood-emoji display-3" onclick="submitMood('üòä')">üòä</div>
                                <p class="small">Happy</p>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-success" style="width: 45%"></div>
                                </div>
                                <small class="text-muted">45%</small>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="mood-emoji display-3" onclick="submitMood('üöÄ')">üöÄ</div>
                                <p class="small">Motivated</p>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-primary" style="width: 30%"></div>
                                </div>
                                <small class="text-muted">30%</small>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="mood-emoji display-3" onclick="submitMood('üòê')">üòê</div>
                                <p class="small">Neutral</p>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-warning" style="width: 20%"></div>
                                </div>
                                <small class="text-muted">20%</small>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="mood-emoji display-3" onclick="submitMood('üòî')">üòî</div>
                                <p class="small">Tired</p>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-danger" style="width: 5%"></div>
                                </div>
                                <small class="text-muted">5%</small>
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <p class="text-muted">Click on an emoji to share your current mood!</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Wellness Tip</h5>
                    </div>
                    <div class="card-body">
                        <div id="wellnessTip" class="text-center">
                            <div class="mb-3">
                                <i class="fas fa-coffee text-warning fa-2x"></i>
                            </div>
                            <h6>Take Regular Breaks</h6>
                            <p class="small text-muted">
                                Remember to take a 5-minute break every hour. Stand up, stretch, or grab some water!
                            </p>
                        </div>
                        <button onclick="getNewTip()" class="btn btn-outline-primary btn-sm w-100">
                            <i class="fas fa-sync-alt me-2"></i>New Tip
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Wellness Activities -->
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0"><i class="fas fa-dumbbell me-2"></i>Wellness Activities</h5>
                    </div>
                    <div class="card-body">
                        <div class="activity-item d-flex align-items-center mb-3 p-3 bg-light rounded">
                            <div class="activity-icon me-3">
                                <i class="fas fa-walking text-primary fa-2x"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Daily Step Challenge</h6>
                                <p class="small text-muted mb-2">Team goal: 10,000 steps</p>
                                <div class="progress" style="height: 6px;">
                                    <div class="progress-bar bg-primary" style="width: 78%"></div>
                                </div>
                                <small class="text-muted">7,800 / 10,000 steps</small>
                            </div>
                        </div>

                        <div class="activity-item d-flex align-items-center mb-3 p-3 bg-light rounded">
                            <div class="activity-icon me-3">
                                <i class="fas fa-leaf text-success fa-2x"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Mindfulness Session</h6>
                                <p class="small text-muted mb-2">Daily 10-minute meditation</p>
                                <span class="badge bg-success">Completed Today</span>
                            </div>
                        </div>

                        <div class="activity-item d-flex align-items-center mb-3 p-3 bg-light rounded">
                            <div class="activity-icon me-3">
                                <i class="fas fa-apple-alt text-warning fa-2x"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Healthy Eating</h6>
                                <p class="small text-muted mb-2">Track your nutrition</p>
                                <span class="badge bg-warning">In Progress</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0"><i class="fas fa-calendar-check me-2"></i>Wellness Events</h5>
                    </div>
                    <div class="card-body">
                        <div class="event-item border-start border-primary border-4 ps-3 mb-4">
                            <h6 class="mb-1">Team Yoga Session</h6>
                            <p class="small text-muted mb-1">
                                <i class="fas fa-clock me-1"></i>Today, 5:00 PM - 6:00 PM
                            </p>
                            <p class="small text-muted mb-2">Virtual yoga session with certified instructor</p>
                            <button class="btn btn-primary btn-sm">Join Session</button>
                        </div>

                        <div class="event-item border-start border-success border-4 ps-3 mb-4">
                            <h6 class="mb-1">Mental Health Workshop</h6>
                            <p class="small text-muted mb-1">
                                <i class="fas fa-clock me-1"></i>Tomorrow, 2:00 PM - 3:30 PM
                            </p>
                            <p class="small text-muted mb-2">Stress management and resilience building</p>
                            <button class="btn btn-success btn-sm">Register</button>
                        </div>

                        <div class="event-item border-start border-info border-4 ps-3 mb-4">
                            <h6 class="mb-1">Team Building Activity</h6>
                            <p class="small text-muted mb-1">
                                <i class="fas fa-clock me-1"></i>Friday, 4:00 PM - 5:30 PM
                            </p>
                            <p class="small text-muted mb-2">Virtual escape room challenge</p>
                            <button class="btn btn-info btn-sm">Sign Up</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Wellness Resources -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0"><i class="fas fa-book-open me-2"></i>Wellness Resources</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="resource-card text-center p-3 border rounded">
                                    <i class="fas fa-headphones-alt text-primary fa-2x mb-3"></i>
                                    <h6>Meditation Apps</h6>
                                    <p class="small text-muted">Calm, Headspace, Insight Timer</p>
                                    <a href="#" class="btn btn-outline-primary btn-sm">Explore</a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="resource-card text-center p-3 border rounded">
                                    <i class="fas fa-user-md text-success fa-2x mb-3"></i>
                                    <h6>Employee Assistance</h6>
                                    <p class="small text-muted">24/7 counseling support</p>
                                    <a href="#" class="btn btn-outline-success btn-sm">Contact</a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="resource-card text-center p-3 border rounded">
                                    <i class="fas fa-graduation-cap text-info fa-2x mb-3"></i>
                                    <h6>Wellness Courses</h6>
                                    <p class="small text-muted">Online learning modules</p>
                                    <a href="#" class="btn btn-outline-info btn-sm">Learn</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const wellnessTips = [
            {
                icon: 'fas fa-coffee text-warning',
                title: 'Take Regular Breaks',
                content: 'Remember to take a 5-minute break every hour. Stand up, stretch, or grab some water!'
            },
            {
                icon: 'fas fa-bed text-primary',
                title: 'Get Quality Sleep',
                content: 'Aim for 7-8 hours of sleep each night. Good sleep improves focus and productivity.'
            },
            {
                icon: 'fas fa-walking text-success',
                title: 'Stay Active',
                content: 'Take the stairs, park further away, or go for a walk during lunch break.'
            },
            {
                icon: 'fas fa-users text-info',
                title: 'Connect with Colleagues',
                content: 'Build relationships! Social connections at work improve happiness and reduce stress.'
            },
            {
                icon: 'fas fa-brain text-purple',
                title: 'Practice Mindfulness',
                content: 'Take 5 minutes to practice deep breathing or meditation during your day.'
            },
            {
                icon: 'fas fa-apple-alt text-success',
                title: 'Eat Healthy Snacks',
                content: 'Choose fruits, nuts, or yogurt over processed snacks for sustained energy.'
            }
        ];

        function getNewTip() {
            const randomTip = wellnessTips[Math.floor(Math.random() * wellnessTips.length)];
            const tipContainer = document.getElementById('wellnessTip');
            
            tipContainer.innerHTML = `
                <div class="mb-3">
                    <i class="${randomTip.icon} fa-2x"></i>
                </div>
                <h6>${randomTip.title}</h6>
                <p class="small text-muted">${randomTip.content}</p>
            `;
        }

        function submitMood(emoji) {
            const moodEmojis = document.querySelectorAll('.mood-emoji');
            
            // Add visual feedback
            moodEmojis.forEach(e => e.style.transform = 'scale(1)');
            event.target.style.transform = 'scale(1.2)';
            
            // Show success message
            const alert = document.createElement('div');
            alert.className = 'alert alert-success alert-dismissible fade show mt-3';
            alert.innerHTML = `
                <i class="fas fa-check-circle me-2"></i>
                Thanks for sharing your mood! ${emoji}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            event.target.closest('.card-body').appendChild(alert);
            
            // Auto dismiss after 3 seconds
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.parentNode.removeChild(alert);
                }
                event.target.style.transform = 'scale(1)';
            }, 3000);
        }

        // Add hover effects to mood emojis
        document.addEventListener('DOMContentLoaded', function() {
            const moodEmojis = document.querySelectorAll('.mood-emoji');
            moodEmojis.forEach(emoji => {
                emoji.style.cursor = 'pointer';
                emoji.style.transition = 'transform 0.2s ease';
                
                emoji.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.1)';
                });
                
                emoji.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
            });

            // Animate progress bars
            const progressBars = document.querySelectorAll('.progress-bar');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0%';
                setTimeout(() => {
                    bar.style.transition = 'width 1s ease-in-out';
                    bar.style.width = width;
                }, 500);
            });
        });
    </script>

    <style>
        .mood-emoji {
            transition: transform 0.2s ease;
        }

        .mood-emoji:hover {
            transform: scale(1.1);
            cursor: pointer;
        }

        .activity-item:hover {
            background-color: #f8f9fa !important;
            transition: background-color 0.2s ease;
        }

        .resource-card:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: box-shadow 0.2s ease;
        }

        .event-item {
            transition: transform 0.2s ease;
        }

        .event-item:hover {
            transform: translateX(5px);
        }
    </style>
</body>
</html>
